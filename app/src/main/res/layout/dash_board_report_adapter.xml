<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/year"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Year"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/installation"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Installation"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/open_bal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Open bal"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/consumed_unit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Consumed\nUnits"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/demands"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Demands"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/net_pat_amt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Net Pay\nAmount"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/coll_amt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="7"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Collection\nAmt"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/closing_bal_amt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="8"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Closing Bal\nAmt"
                android:textColor="@color/black" />

        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>