<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/lin_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints,UselessParent">
        <TextView
            android:id="@+id/txt_tranyear"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/deep_black"
            android:text="@string/transaction_year"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_month"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/deep_black"
            android:text="@string/month"/>
        <TextView
            android:id="@+id/txt_installation"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/deep_black"
            android:text="@string/installation"/>
        <TextView
            android:id="@+id/txt_consumed_unit"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/deep_black"
            android:text="@string/consumedunit"/>
        <TextView
            android:id="@+id/txt_current_amt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/deep_black"
            android:text="@string/currentbillamt"/>
    </LinearLayout>
</RelativeLayout>